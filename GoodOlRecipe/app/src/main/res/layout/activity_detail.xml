<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarDetail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/recipeImageDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_desc" />

    <TextView
        android:id="@+id/recipeTitleDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recipeImageDetail"
        android:theme="@style/ThemeOverlay.AppCompat"
        android:text="@string/title_placeholder"
        android:padding="8dp"
        style="@style/TextAppearance.AppCompat.Headline" />

    <TextView
        android:id="@+id/recipeTagDetail"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/recipeTitleDetail"
        android:padding="8dp"
        android:text="@string/description_placeholder" />

    <TextView
        android:id="@+id/recipeDescriptionDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeTitleDetail"
        android:padding="8dp"
        android:text="@string/description_placeholder"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        style="@style/TextAppearance.AppCompat.Subhead"/>

</RelativeLayout>