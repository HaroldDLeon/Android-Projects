<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    tools:context=".WinnerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/winner_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:layout_rowSpan="1"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:id="@+id/textView_WinnerTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginTop="5dp"
        android:layout_row="1"
        android:layout_rowSpan="1"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/WinnerAlert"
        android:textAlignment="center"
        android:textSize="24sp"
        android:typeface="normal" />

    <ImageView
        android:id="@+id/winner_image_background"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_rowSpan="3"
        android:contentDescription="@string/image_description"
        android:src="@drawable/ic_background_trophy" />

    <LinearLayout

        android:id="@+id/share_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_row="9"
        android:layout_rowSpan="1"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/phone_share"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="@string/phone_icon"
            android:focusable="true"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="?attr/icon_phone" />

        <ImageView
            android:id="@+id/sms_share"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="@string/sms_icon"
            android:focusable="true"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="?attr/icon_sms" />

        <ImageView
            android:id="@+id/map_share"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="@string/map_icon"
            android:focusable="true"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="?attr/icon_map" />

        <ImageView
            android:id="@+id/more_share"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="@string/more_icon"
            android:focusable="true"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="?attr/icon_share" />
    </LinearLayout>


</GridLayout>
