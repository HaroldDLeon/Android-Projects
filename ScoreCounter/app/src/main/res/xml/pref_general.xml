<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="App Settings">

        <ListPreference
            android:defaultValue="-1"
            android:entries="@array/pref_sport_list_titles"
            android:entryValues="@array/pref_sport_list_values"
            android:key="sports_list"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_title_sports_name" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/pref_background_list_titles"
            android:entryValues="@array/pref_background_list_values"
            android:key="background_list"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/pref_background_list" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Social">
        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_value_default_contact"
            android:inputType="phone"
            android:key="default_contact"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_default_contact" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Team settings">

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_value_home_name"
            android:inputType="textCapWords"
            android:key="home_text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_home_name" />

        <EditTextPreference
            android:capitalize="words"
            android:defaultValue="@string/pref_value_away_name"
            android:inputType="textCapWords"
            android:key="away_text"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_title_away_name" />
    </PreferenceCategory>

</PreferenceScreen>
